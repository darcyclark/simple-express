  form#feedback(action="/blog/search" method="post" name="feedback" enctype="application/x-www-form-urlencoded")
    .input-group
      input.form-control(type='text', name='searchterm', value=searchterm, placeholder='Enter search term/s')
      span.input-group-btn
        button.btn.btn-default(type='submit')
          span.glyphicon.glyphicon-search
        a.btn.btn-default(href='/blog')
          span.glyphicon.glyphicon-remove
