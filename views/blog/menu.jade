.well
  h4 Categories
  .row
    - split = tags.splice(0, Math.ceil(tags.length/2))
    .col-lg-6
      ul.list-unstyled
        each tag in split
          li
            a(href='/blog/tags/#{tag}')=_.str.capitalize(tag)
    .col-lg-6
      ul.list-unstyled
        each tag in tags
          li
            a(href='/blog/tags/#{tag}')=_.str.capitalize(tag)
