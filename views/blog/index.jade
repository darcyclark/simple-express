extends ../layout

block content

  .row
    .col-lg-8
      each page in pages
        // blog entry
        h1
          a(href='/blog/pages/#{page.filename}')
            =page.title
        //-p.lead
          //-| by 
          //-a(href='/blog') Start Bootstrap
        hr
        p
          span.glyphicon.glyphicon-time
          |  Posted on #{page.date} (August 28, 2013 at 10:00 PM)
          span.pull-right
            each tag in page.tags
              span.badge.badge-default=tag
        hr
        img.img-responsive(src='http://placehold.it/900x300')
        hr
        p
          =page.description
        a.btn.btn-primary(href='/blog/pages/#{page.filename}')
          | Read More 
          span.glyphicon.glyphicon-chevron-right
        hr

      // pager
      ul.pager
        li.previous
          a(href='#') ← Older
        li.next
          a(href='#') Newer →

    .col-lg-4
      include menu

  hr
  footer
    .row
      .col-lg-12
        p Copyright © Company 2013
